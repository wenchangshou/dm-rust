{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Modbus Config",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "tcp",
        "serial"
      ],
      "default": "tcp"
    },
    "addr": {
      "type": "string"
    },
    "port": {
      "type": "integer",
      "default": 502
    },
    "slave_id": {
      "type": "integer",
      "default": 1
    }
  },
  "required": [
    "type",
    "addr"
  ]
}